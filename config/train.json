{
    "run_name": "CanoSpeech",
    "run_description": "Cano Speech running on VCTK dataset",

    "dataset_config": {
        "formatter":"vctk",
        "dataset_name":"vctk",
        "meta_file_train":"./filelists/vctk_train_filelist.txt.cleaned",
        "meta_file_val":"./filelists/vctk_test_filelist.txt.cleaned",
        "path":"D:\\dataset\\VCTK",
        "language":"en",
        "ignored_speakers":[
            "p261",
            "p225",
            "p294",
            "p347",
            "p238",
            "p234",
            "p248",
            "p335",
            "p245",
            "p326",
            "p302"
        ],

        "mel_fmin": 0,
        "mel_fmax": null,
        "hop_length": 256,
        "win_length": 1024,
        "sample_rate": 16000,
        "fft_length": 1024,
        "num_mels": 80,

        "min_text_len": 1,
        "max_text_len": 190,
        "add_blank": true,
        "cleaned_text": true,
        "text_cleaners":["english_cleaners2"]
    },

    "eval_split_max_size": 256,
    "eval_split_size": 0.1,
    "distributed_backend": "nccl",
    "distributed_url": "tcp://localhost:54321",
    "mixed_precision": false,
    "epochs": 1000,
    "grad_clip": [ 1000, 1000 ],

    "scheduler_after_epoch": true,
    "lr": 0.001,
    "optimizer": "AdamW",
    "optimizer_params": {
        "betas": [0.8, 0.99 ],
        "eps": 1e-09,
        "weight_decay": 0.01
    },
    "lr_scheduler": null,
    "lr_scheduler_params": {},
    "batch_size": 8,
    "eval_batch_size": 8,
    "batch_group_size": 48,
    "num_loader_workers": 8,
    "num_eval_loader_workers": 8,

    "print_step": 50,
    "plot_step": 100,
    "log_model_step": 1000,
    "save_step": 5000,
    "save_n_checkpoints": 2,
    "save_checkpoints": true,

    "kl_loss_alpha": 1.0,
    "disc_loss_alpha": 1.0,
    "gen_loss_alpha": 1.0,
    "feat_loss_alpha": 1.0,
    "mel_loss_alpha": 45.0,
    "dur_loss_alpha": 1.0,
    "speaker_encoder_loss_alpha": 9.0,
    "model": {
        "hidden_channels": 192,
        "out_channels":513,
        "embedded_language_dim": 4,
        "embedded_speaker_dim": 256,
        "discriminator": {
            "periods_multi_period_discriminator": [2, 3, 5, 7, 11],
            "use_spectral_norm_disriminator": false
        },
        "text_encoder": {
            "num_chars": 165,
            "hidden_channels_ffn_text_encoder": 768,
            "num_heads_text_encoder": 2,
            "num_layers_text_encoder": 10,
            "kernel_size_text_encoder": 3,
            "dropout_p_text_encoder": 0.1
        },
        "audio_encoder": {
            "kernel_size_audio_encoder": 5,
            "dilation_rate_audio_encoder": 1,
            "num_layers_audio_encoder": 16
        }
    }
}